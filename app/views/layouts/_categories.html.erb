<h3>Categories</h3>
<br>
<% @categories.each do |category|  %>
<div class="prod">
    <h2><%= category.title %></h2>
    <% if current_user && current_user.admin %>
    <%= link_to (image_tag category.image, :style => "height:100px"), category %>
    
    <% else %>
    <%= image_tag category.image, :class=>"prodIm" %>
     <% end %>
    <p><%= category.description %></p>
    <p><a href="/category/<%= category.title %>" class="btn btn-block btn-info active btn-embossed "><%= category.title %></a></p>

</div>

<% end %>