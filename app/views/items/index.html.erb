<p id="notice"><%= notice %></p>

 <div id="prod">
  
  <h1>Items</h1>
     
      <% @items.each do |item| %>
      <div class="prod">
       <h1><%= item.title %></h1>
       
       <%= link_to (image_tag item.image_url, :class => "prodIm"), item %>
        <p><%= item.description %></p>
       <p>Price <%= number_to_currency(item.price, :unit => "â‚¬") %>
       <br>
        Category: <%= item.category %>
        <br>
        Brand: <%= item.brand %></p>
       <%= link_to 'Show',  item, :class => "btn btn-block btn-info active btn-embossed ", :role => "button" %>
       <p>
        <% if current_user && !current_user.admin %>
        <a href="/cart/<%= item.id %>" class="btn btn-block btn-info active btn-embossed ">Add To Cart</a>
        <% end %>
        <% if current_user && current_user.admin %>
         
         <%= link_to 'Edit',  edit_item_path(item), :class => "btn btn-block btn-info active btn-embossed ", :role => "button" %>
         <%= link_to 'Destroy',  item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-block btn-info active btn-embossed ", :role => "button" %>
         <%= link_to 'New Item',  new_item_path, :class => "btn btn-block btn-info active btn-embossed ", :role => "button" %>
         <%= link_to 'New Category', new_category_path, :class =>"btn btn-block btn-info active btn-embossed ", :role=>"button" %>
         
         <% end %>
       </p>
        
      </div>
    <% end %>
      
</div>


